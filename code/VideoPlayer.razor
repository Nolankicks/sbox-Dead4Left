@using Sandbox;
@using Sandbox.UI;
@inherits PanelComponent

<root>
	<WebPanel style="width: 100%; height: 100%; border-radius: 16px;" @ref="WebPanel" />
</root>

@code
{

	public WebPanel WebPanel { get; set; }
	[Property] public string Url { get; set; } = "https://www.youtube.com/watch?v=Ig9HHFkCSw0";
	[Property] public bool Refresh { get; set; } = false;
protected override void OnTreeFirstBuilt()
{
	WebPanel.Surface.Url = Url;
}
        protected override void OnUpdate()
        {
			if (Refresh)
			{
				Url = "https://www.youtube.com/watch?v=Ig9HHFkCSw0";
				StateHasChanged();
			}
        }
        protected override int BuildHash() => System.HashCode.Combine( Time.Now );
}


